<div class="container">
  <h2 class="title">Send message</h2>

  <div class="send-message-form">
    <%= form_for(Message.new) do |f| %>
        <fieldset class="form-group">
          <%= f.label :reciever %>
          <%= f.collection_select :reciever_id, @friends, :id, :name, {include_blank: true}, class: 'form-control' %>
        </fieldset>

        <fieldset class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control", rows: 4 %>
        </fieldset>

        <button type="submit" class="btn btn-primary">Send</button>
    <% end %>
  </div>

</div>